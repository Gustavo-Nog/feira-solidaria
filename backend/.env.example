# Banco de Dados
DATABASE_URL="postgresql://postgres:SUA_SENHA_AQUI@localhost:5433/feirasolidaria?schema=public"

# Google OAuth (Backend precisa do CLIENT_ID e CLIENT_SECRET)
GOOGLE_CLIENT_ID="SUA_GOOGLE_CLIENT_ID_AQUI"
GOOGLE_CLIENT_SECRET="SEU_GOOGLE_CLIENT_SECRET_AQUI"

# Ambiente
NODE_ENV=development

# Expiração dos cookies (em ms)
ACCESS_TOKEN_COOKIE_EXPIRES=259200000
REFRESH_TOKEN_COOKIE_EXPIRES=604800000

# JWT
JWT_SECRET="sua_chave_secreta_aqui"
JWT_REFRESH_TOKEN="sua_chave_refresh_aqui"
JWT_SECRET_EXPIRES="1h"
JWT_REFRESH_TOKEN_EXPIRES="2d"

# Callback do Google OAuth
CALLBACK_URL="http://localhost:3001/api/auth/google/callback"
 
# URL do frontend (usada para configurar CORS)
FRONTEND_URL="http://localhost:5173"

# (Opcional) Cloudinary para armazenar uploads externamente
# CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
